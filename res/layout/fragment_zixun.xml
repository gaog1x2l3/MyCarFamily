<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     xmlns:app="http://schemas.android.com/apk/res/com.example.mycar.view" 
     xmlns:app1="http://schemas.android.com/apk/res/com.example.mycar">

    <com.example.mycar.view.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip" 
        app1:pstsIndicatorColor="#2EADF5"
        app1:pstsIndicatorHeight="5dp"
       
        />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>